<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#909090"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/sate_kerbau"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/tisane"/>

        <ImageView
            android:id="@+id/opor_ayam"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/wedang_pejuh"
            android:layout_marginStart="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/nasi_pindang"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/wedang_coro"/>

        <ImageView
            android:id="@+id/lentogkudus"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/wedang_blung"
            android:layout_marginStart="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/lepet"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/dawet"/>

    </LinearLayout>

</LinearLayout>
